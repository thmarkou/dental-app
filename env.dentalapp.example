# Dental Practice Management App - Environment Configuration
# Copy this file to .env.dentalapp and fill in your values

# App Configuration
APP_NAME=Dental Practice Management
APP_BUNDLE_ID=com.dentalapp.practice
APP_PACKAGE_NAME=com.dentalapp.practice

# Database Configuration
DATABASE_NAME=dentalapp
DATABASE_PATH=./data/dentalapp.db

# API Configuration
API_BASE_URL=https://api.example.com
API_TIMEOUT=30000

# SMS Gateway Configuration
SMS_GATEWAY_API_KEY=your_sms_api_key
SMS_GATEWAY_API_URL=https://sms-gateway.example.com
SMS_GATEWAY_SENDER_ID=YourPracticeName

# Email Service Configuration
EMAIL_SERVICE_PROVIDER=smtp
EMAIL_SMTP_HOST=smtp.example.com
EMAIL_SMTP_PORT=587
EMAIL_SMTP_USER=your_email@example.com
EMAIL_SMTP_PASSWORD=your_email_password
EMAIL_FROM_ADDRESS=noreply@example.com
EMAIL_FROM_NAME=Dental Practice

# myDATA API Configuration (Greek Tax Authority)
MYDATA_API_URL=https://mydata-api.example.com
MYDATA_API_KEY=your_mydata_api_key
MYDATA_PRACTICE_AFM=your_practice_afm
MYDATA_PRACTICE_NAME=Your Practice Name
MYDATA_PRACTICE_ADDRESS=Your Practice Address
MYDATA_PRACTICE_TAX_ID=your_tax_id

# Cloud Backup Configuration (Optional)
CLOUD_BACKUP_ENABLED=false
CLOUD_BACKUP_SERVICE=aws
CLOUD_BACKUP_ACCESS_KEY=
CLOUD_BACKUP_SECRET_KEY=
CLOUD_BACKUP_BUCKET=

# Security Configuration
JWT_SECRET=your_jwt_secret_key_change_this
ENCRYPTION_KEY=your_encryption_key_change_this
SESSION_TIMEOUT=3600000

# Feature Flags
FEATURE_SMS_REMINDERS=true
FEATURE_EMAIL_NOTIFICATIONS=true
FEATURE_MYDATA_INTEGRATION=true
FEATURE_CLOUD_BACKUP=false

# Development/Production
NODE_ENV=development
DEBUG_MODE=true
LOG_LEVEL=debug

# Storage Configuration
STORAGE_PATH=./storage/dentalapp
UPLOAD_PATH=./uploads/dentalapp
CACHE_PATH=./cache/dentalapp

# Sync Configuration
SYNC_ENABLED=true
SYNC_INTERVAL=300000
SYNC_ON_STARTUP=true

